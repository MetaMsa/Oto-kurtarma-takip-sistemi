@{
    ViewData["Title"] = "Ana Sayfa";
}
@model LoginModel

<div class="text-center">
    <h1 class="display-4">Hoş Geldiniz</h1><br>
</div>

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 text-center">
        <form class="form" asp-action="Index" method="post">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" asp-for="username" class="form-control" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="input-group">
                    <input type="password" asp-for="password" class="form-control" placeholder="Şifre" required>
                </div>
                <div class="input-group">
                    <button type="submit" class="btn btn-primary form-control">Giriş Yap <i
                            class="fa fa-right-to-bracket"></i></button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>

<center>
    <div class="text-danger" asp-validation-summary="All"></div>
</center>

<div class="my-3 text-center">
    <a class="btn btn-success" asp-action="Register">Kayıt Ol <i class="fa-solid fa-user-plus"></i></a>
</div>

<div class="text-center"><br>
    <p>Oto kurtarma takip sistemi projemizin <a href="https://github.com/MetaMsa/Oto-kurtarma-takip-sistemi.git">kodları
            için tıklayın.</a></p>
</div>
